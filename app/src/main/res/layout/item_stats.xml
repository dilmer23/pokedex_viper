<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutBackground3"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="12dp"
    android:background="@drawable/background_item_pokemon"
    android:clickable="true"
    android:clipToPadding="true"
    android:focusable="true"
    android:elevation="15dp"
    android:padding="8dp"
    tools:backgroundTint="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textViewIdStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/background_item_span"
        android:text="@string/app_name"
        android:alpha="0.25"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBarHP"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:indicatorColor="@color/black"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/textViewStat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:paddingStart="8dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="25dp"
        android:paddingEnd="8dp"
        android:text="stast"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-16dp"
        android:layout_marginBottom="-24dp"
        android:adjustViewBounds="true"
        android:alpha="0.25"
        android:src="@drawable/pokeball"
        app:tint="@color/white" />

</RelativeLayout>